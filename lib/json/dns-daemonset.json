{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "dns",
    "labels": {
      "app": "dns"
    }
  },
  "spec": {
    "selector": {
      "matchLabels": {
        "app": "dns"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "dns"
        }
      },
      "spec": {
        "hostNetwork": true,
        "dnsPolicy": "ClusterFirstWithHostNet",	    
        "containers": [
          {
            "name": "unbound",
            "image": "jusschwa/unbound-reversecache:latest",
            "ports": [
            {
              "containerPort": 9053,
              "protocol": "UDP"
            },
            {
                "containerPort": 9053,
                "protocol": "TCP"
              }
            ],
            "envFrom": [
              {
                "secretRef": {
                  "name": "redis-pass"
                }
              }
            ],
            "volumeMounts": [
              {
                "mountPath": "/opt/guardian",
                "name": "guardian-conf-volume"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "guardian-conf-volume",
            "configMap": {
              "name": "guardian-conf"
            }
          }
        ]
      }
    }
  }
}
