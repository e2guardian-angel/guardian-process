{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "auth-db",
    "namespace": "filter",
    "labels": {
      "app": "auth-db"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "auth-db"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "auth-db"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "auth-db",
            "image": "mongo:latest",
            "volumeMounts": [
              {
                "mountPath": "/data/db",
                "name": "mongo-auth-db"
              }
            ],
            "ports": [
              {
                "containerPort": 27017
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "mongo-auth-db",
            "persistentVolumeClaim": {
              "claimName": "auth-db-pvc"
            }
          }
        ]
      }
    }
  }
}
