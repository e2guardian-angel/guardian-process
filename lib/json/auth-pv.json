{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "auth-db"
  },
  "spec": {
    "accessModes": [
      "ReadWriteOnce"
    ],
    "capacity": {
      "storage": "4Gi"
    },
    "local": {
      "path": ""
    },
    "nodeAffinity": {
      "required": {
        "nodeSelectorTerms": [
          {
            "matchExpressions": [
              {
                "key": "kubernetes.io/hostname",
                "operator": "In",
                "values": [
                  "spring-forest"
                ]
              }
            ]
          }
        ]
      }
    },
    "persistentVolumeReclaimPolicy": "Retain",
    "storageClassName": "local-storage"
  }
}